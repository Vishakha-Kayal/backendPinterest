<% include ./partials/header.ejs %>
    <div class="profile w-full min-h-screen bg-zinc-700 text-white pt-1">

        <form id="uploadform" hidden action="/upload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
            <!-- <button type="submit">upload</button> -->
        </form>

        <div class="pr-section flex flex-col items-center mt-20">

            <div class="relative">
                <span 
                    class="uploadprofile cursor-pointer w-8 h-8 bg-zinc-400 rounded-full absolute bottom-0 right-0 flex items-center justify-center">
                    <i class="ri-pencil-line"></i>
                </span>
                <div class="w-32 h-32 bg-white rounded-full">
                    <img src="/images/uploads/<%= user.profileImage %>" alt="" class="object-cover rounded-full">
                </div>
            </div>
            <h1 class="text-3xl font-semibold capitalize mt-2.5"><%= user.name %></h1>
            <h3 class="text-md">
                <%= user.username %>
            </h3>
            <a href="#" class="px-7 py-1 mt-3 bg-zinc-400 rounded-full text-sm edit">Edit</a>
            <button class="px-10 py-2 rounded-lg bg-red-700 text-md mt-3 font-semibold cursor-pointer"
                id="addPostButton">Add new Post</button>
        </div>
        <div class="cards flex flex-wrap gap-10 px-10 mt-10">
            <% for (let i = 0; i < user.posts.length; i++) { %>
                <div class="card">
                    <div class="w-96 h-60 rounded-lg overflow-hidden">
                        <img src="./images/uploads/<%= user.posts[i].Image %>" alt="" class="object-cover h-full w-full">
                    </div>
                    <h2 class="capitalize text-3xl font-semibold mt-4"><%= user.posts[i].title %></h2>
                    <h5 class="font-medium opacity-90">Pin <%= i+1 %></h5>
                </div>
            <% } %>
           
        </div>
    </div>

    <script>
        document.querySelector(".uploadprofile").addEventListener("click", function () {
            document.querySelector("#uploadform input").click();
        })
        document.querySelector(".edit").addEventListener("click", function () {
            document.querySelector("#uploadform input").click();
        })
        document.querySelector("#uploadform input").addEventListener("change", function () {
            document.querySelector("#uploadform").submit();
        })
        var addPostButton = document.getElementById("addPostButton");

        // Add a click event listener to the button
        addPostButton.addEventListener("click", function () {
            // Redirect to the "/add" route
            window.location.href = "/add";
        });
    </script>

    <% include ./partials/footer.ejs %>