<% include ./partials/header.ejs %>
<div class="min-h-screen bg-zinc-700 px-4 text-white pt-2">
    <h2 class="text-2xl">Create a new Post</h2>
    <hr class="opacity-90 w-52">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input type="file" name="postimage" class="block mt-3 px-3 py-2 w-1/5 rounded-md" id="">
        <input type="text" name="title" class="block mt-3 px-3 py-2 w-1/5 rounded-md text-black" id="" placeholder="Title">
        <textarea type="text" class="block mt-3 px-3 py-2 w-1/5 rounded-md h-40 text-black" name="description" placeholder="Description"></textarea>
        <input type="submit" class="block mt-3 px-3 py-1 w-1/5 rounded-md bg-red-600 font-semibold text-xl cursor-pointer" value="Create Post">
    </form>
</div>
<% include ./partials/footer.ejs %>